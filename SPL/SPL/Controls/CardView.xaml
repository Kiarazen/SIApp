<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SPL.Controls.CardView"
             Padding="0" Margin="10" VerticalOptions="Start"
       >
    
    <Frame.Content>
        <StackLayout>
            <Grid>
                <BoxView x:Name="boxCardColor" HorizontalOptions="Fill" BackgroundColor="#00ACC1" InputTransparent="True"/>
                <Image x:Name="imgCard" HorizontalOptions="Fill" Aspect="AspectFill" Source="safeWomen.png" InputTransparent="True"/>
            </Grid>
            <StackLayout Margin="10" >
                <Label Text="SafeNet for Women" FontSize="Large" Opacity="1.0"/>
                <Label Text="A happy and safe house for you and your children." FontSize="Small" Opacity="0.8"/>
                <Label Text="You can live a life without domestic violence." FontSize="Small" Opacity="0.6"/>
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Label FontAttributes="Bold" FontSize="Default" TextColor="#018901" Text="EXPLORE"/>
                   
                </StackLayout>
            </StackLayout>

        </StackLayout>
    </Frame.Content>
</Frame>

